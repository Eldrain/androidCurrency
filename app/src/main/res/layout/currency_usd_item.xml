<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
            android:id="@+id/currencyUsdItemCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="3dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp">

        <RelativeLayout
                android:id="@+id/currencyUsdItemInnerContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingBottom="12dp">

            <TextView
                    android:id="@+id/currencyUsdItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/usd"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"/>

            <ImageView
                    android:id="@+id/currencyUsdItemIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_usd"/>

            <TextView
                    android:id="@+id/currencyUsdItemValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="1000"
                    style="@style/textStyle"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>

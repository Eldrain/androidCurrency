<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
            android:id="@+id/currencyRoubleItemCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="3dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp">

        <RelativeLayout
                android:id="@+id/currencyRoubleItemInnerContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

            <ImageView
                    android:id="@+id/currencyRoubleItemIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_rouble"/>

            <TextView
                    android:id="@+id/currencyRoubleItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/currencyRoubleItemIcon"
                    android:layout_marginStart="30dp"
                    android:layout_centerVertical="true"
                    android:text="@string/rouble"
                    style="@style/textStyle"/>

            <TextView
                    android:id="@+id/currencyRoubleItemValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="1000"
                    style="@style/textStyle"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>

